# ============================================
# MscTutor Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# ============================================
# Database (MySQL/PlanetScale)
# ============================================
# Format: mysql://user:password@host:port/database?sslaccept=strict
# For PlanetScale: mysql://user:password@host/database?sslaccept=strict
DATABASE_URL="mysql://user:password@localhost:3306/msctutor?sslaccept=strict"

# ============================================
# Firebase Client Configuration (Public)
# ============================================
# Get these from Firebase Console → Project Settings → General → Your apps → Web app
# Project ID: msctutor-2fcbb
NEXT_PUBLIC_FIREBASE_PROJECT_ID="msctutor-2fcbb"
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key-here"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="msctutor-2fcbb.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="msctutor-2fcbb.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# ============================================
# Firebase Admin SDK (Server-side)
# ============================================
# Get these from Firebase Console → Project Settings → Service Accounts → Generate new private key
# Download JSON file and extract these values
FIREBASE_ADMIN_PROJECT_ID="msctutor-2fcbb"
FIREBASE_ADMIN_CLIENT_EMAIL="firebase-adminsdk-xxxxx@msctutor-2fcbb.iam.gserviceaccount.com"
# IMPORTANT: Keep \n as literal characters, Vercel will handle them correctly
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_STORAGE_BUCKET="msctutor-2fcbb.appspot.com"

# ============================================
# AI Service Configuration
# ============================================
# Provider: 'deepseek' or 'openai'
AI_PROVIDER="deepseek"
# DeepSeek API Key (if using DeepSeek)
DEEPSEEK_API_KEY="your-deepseek-api-key"
# OpenAI API Key (if using OpenAI)
OPENAI_API_KEY="your-openai-api-key"
# Optional: Custom API URL
AI_API_URL=""
# Optional: Model name (defaults based on provider)
AI_MODEL=""

# ============================================
# Google Cloud Vision API (OCR)
# ============================================
# Path to service account JSON file OR API key
# Option 1: Path to JSON file (recommended for production)
GOOGLE_VISION_API_KEY="path/to/service-account-key.json"
# Option 2: API key (for testing)
# GOOGLE_VISION_API_KEY="your-api-key"

# ============================================
# Cloudflare R2 Storage (Admin Uploads)
# ============================================
# Get these from Cloudflare Dashboard → R2 → Create bucket → Manage R2 API Tokens
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="msctutor-admin"
# Public URL for R2 bucket (if using custom domain)
R2_PUBLIC_URL="https://your-cdn-domain.com"

# ============================================
# Storj Storage (Backup - Optional)
# ============================================
STORJ_ACCESS_KEY="your-storj-access-key"
STORJ_SECRET_KEY="your-storj-secret-key"
STORJ_BUCKET_NAME="msctutor-backup"
STORJ_ENDPOINT="gateway.storjshare.io"

# ============================================
# Application Configuration
# ============================================
# Environment: development, production, test
NODE_ENV="development"
# Base URL for the application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Production domain
NEXT_PUBLIC_DOMAIN="msctutor.com"

# ============================================
# Security & Rate Limiting
# ============================================
# Rate limit per IP (requests per minute)
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# ============================================
# Notes for Vercel Deployment
# ============================================
# 1. Copy all variables above to Vercel → Project → Settings → Environment Variables
# 2. For FIREBASE_ADMIN_PRIVATE_KEY: Paste the entire key including \n characters
#    Vercel supports multi-line environment variables
# 3. For GOOGLE_VISION_API_KEY: Use the JSON content as a string, or upload as secret
# 4. Make sure to set NODE_ENV=production for production deployment
# 5. Set NEXT_PUBLIC_APP_URL=https://msctutor.com for production
